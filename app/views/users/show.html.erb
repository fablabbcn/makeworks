<%= title t("shared.user_settings") %>

<%= render 'user_tabs' if current_user == @user %>

<div class="card my-5 p-5 mw-900">
  <div class="justify-content-between d-flex">
    <div class="">
      <% if @user == current_user %>
        <%= link_to "Edit", edit_profile_url(current_user), class: 'btn btn-primary mb-3' %>
      <% end %>

      <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
      </p>

      <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
      </p>

      <% if current_user == @user %>
        <p>
        <strong>Email:</strong>
        <%= @user.email %>
        </p>

        <p>
        <strong>Language:</strong>
        <%= @user.locale %>
        </p>

        <p>
        <strong>Time zone:</strong>
        <%= @user.time_zone %>
        </p>
      <% end %>

      <p>
      <strong>Biography:</strong>
      <%= @user.bio %>
      </p>
    </div>

    <div class="">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, style: 'max-height:200px;' %>
      <% end %>
    </div>
  </div>

  <hr>

  <%= render 'user_regions' %>

  <%= render 'user_companies' %>
</div>
