<% content_for(:title, t('shared.tagline')) %>

<section class="p-5 landingheader">
  <div class="p-md-5 mt-5">
    <h1 class="text-center mx-auto" style="max-width:800px;">
      Trouvez des fabricants locaux et durables, des fournisseurs de matériaux et des installations d'atelier
    </h1>
  </div>

  <form class="mx-auto mb-5 pb-5" action="/companies">
    <div class="input-group mx-auto" style="max-width:600px;">
      <input
        class="form-control"
        name="q[name_or_description_or_intro_or_background_or_manufacturer_taxonomies_name_i_cont]"
        type="search"
        placeholder="Search for manufacturers, materials, processes or tools"
        aria-label="Search"
        style="border-bottom-left-radius: 30px; border-top-left-radius: 30px; height: 60px;"
        >
        <button
          class="btn btn-blue input-group-append"
          type="submit"
          style="border-bottom-right-radius: 30px; border-top-right-radius: 30px"
          >
          Go
        </button>
    </div>
  </form>
</section>

<section class="bg-grey3 p-5 text-center">
  <div class="container">
    <h2 class="mb-0">Comment ça marche ?</h2>

    <div class="row">
      <div class="col-md-4">
        <img src="<%= image_url('browse.png') %>" class="img-fluid w-75" alt="Make Works illustrations"/>

        <h3>Découvre</h3>
        <p>Découvrez les processus, les matériaux et les machines dont vous avez besoin pour fabriquer le travail</p>
      </div>
      <div class="col-md-4">
        <img src="<%= image_url('match.png') %>" class="img-fluid w-75" alt="Make Works illustrations"/>
        <h3>Contact</h3>
        <p>Des informations détaillées vous permettent de trouver le bon fabricant avec lequel travailler</p>
      </div>
      <div class="col-md-4">
        <img src="<%= image_url('contact.png') %>" class="img-fluid w-75" alt="Make Works illustrations"/>
        <h3>Fabrique</h3>
        <p>Entrez directement en contact avec les fabricants et commencez à travailler</p>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <h2>Trouver le bon fabricant</h2>
    <div class="row my-4">

      <article class="col-md-4">
        <div class="card bg-dark text-white">
          <%= image_tag('https://static.make.works/company/FluxLaser_2/1200px/110814MakeWorks_FluxLaser_EoinCarey_8.jpg', alt: 'Plastic for good', class: 'card-img img-fill', style: 'border-radius: inherit; height: 350px; opacity: 0.7;')%>
          <div class="card-img-overlay p-4">
            <h3 class="fw-bold">Fabrication innovante</h3>
            <p>Fabriquer des produits à grande échelle avec des fabricants et des fournisseurs de matériaux de grande capacité</p>

            <%= link_to "/companies?q%5Bcharacter_tags_id_in%5D%5B%5D=5&commit=Search",
              class: 'btn bg-white position-absolute',
              style: 'bottom: 20px;' do %>
              <%= t("shared.explore") %>
              <i class="bi bi-arrow-right"></i>
            <% end %>
          </div>
        </div>
      </article>

      <article class="col-md-8">
        <div class="card bg-dark text-white">
          <%= image_tag('https://static.make.works/company/KnockcandoMill/1200px/120215_KnockcandoMill_3.jpg', alt: 'Plastic for good', class: 'card-img img-fill', style: 'border-radius: inherit; height: 350px; opacity: 0.7;')%>
          <div class="card-img-overlay p-4">
            <h3 class="fw-bold">Économie circulaire</h3>
            <p>Travailler avec des fabricants qui utilisent des matériaux durables, recyclent ou produisent zéro déchet</p>

            <%= link_to "/companies?q%5Bcharacter_tags_id_in%5D%5B%5D=2&commit=Search",
              class: 'btn bg-white position-absolute',
              style: 'bottom: 20px;' do %>
              <%= t("shared.explore") %>
              <i class="bi bi-arrow-right"></i>
            <% end %>
          </div>
        </div>
      </article>

      <article class="col-md-8">
        <div class="card bg-dark text-white">
          <%= image_tag('https://static.make.works/company/SkyeKnives/1200px/2013-08-12_MakeWorks_SkyeKnifes_StudioRoRo_1798.jpg', alt: 'Plastic for good', class: 'card-img img-fill', style: 'border-radius: inherit; height: 350px;')%>
          <div class="card-img-overlay p-4">
            <h3 class="fw-bold">Sur mesure</h3>
            <p>Création d'articles sur mesure et de petits lots pour une production personnalisée</p>

            <%= link_to "/companies?q%5Bcharacter_tags_id_in%5D%5B%5D=4&commit=Search",
              class: 'btn bg-white position-absolute',
              style: 'bottom: 20px;' do %>
              <%= t("shared.explore") %>
              <i class="bi bi-arrow-right"></i>
            <% end %>
          </div>
        </div>
      </article>

      <article class="col-md-4">
        <div class="card bg-dark text-white">
          <%= image_tag('https://static.make.works/company/al_fakher_pottery/1200px/2017_10_01_MakeWorks_al_fakher_pottery_Sami_Sasso_091013004848.jpg', alt: 'Plastic for good', class: 'card-img img-fill', style: 'border-radius: inherit; height: 350px; opacity: 0.7;')%>
          <div class="card-img-overlay p-4">
            <h3 class="fw-bold">Techniques anciennes</h3>
            <p>Soutenir les artisans et faire vivre les métiers anciens</p>

            <%= link_to "/companies?q%5Bcharacter_tags_id_in%5D%5B%5D=3&commit=Search",
              class: 'btn bg-white position-absolute',
              style: 'bottom: 20px;' do %>
              <%= t("shared.explore") %>
              <i class="bi bi-arrow-right"></i>
            <% end %>
          </div>
        </div>
      </article>

    </div>
  </div>
</section>

<section>
  <div class="container">
    <h2>Roulette</h2>
    <div class="row">
      <%= render @companies %>
    </div>
  </div>
</section>

<% if current_user %>

<% else %>
<section class="py-5 my-5">
  <div class="container">

    <div class="card mb-5">
      <section class="row g-0">
        <article class="col-12 col-lg-6">
          <%= image_tag('DDMP_plasticforgood_7.jpg', alt: 'Plastic for good', class: 'img-fill rounded-start') %>
        </article>
        <article class="col-12 col-lg-6">
          <div class="p-5">
            <h2 class="mb-4">Join Make Works today!</h2>
            <p class="fs-5"><i class="bi bi-check me-2"></i>Find new clients to grow your business</p>
            <p class="fs-5"><i class="bi bi-check me-2"></i>Source effectively and produce sustainably</p>
            <p class="fs-5"><i class="bi bi-check me-2"></i>Prototype your business idea</p>
            <p class="fs-5"><i class="bi bi-check me-2"></i>Connect with like-minded individuals</p>
            <%= link_to  new_user_registration_url, class: 'btn btn-blue mt-4' do %>
              Create your account
              <i class="bi bi-arrow-right"></i>
            <% end %>
          </div>
        </article>
      </section>
    </div>
  </div>
</section>
<% end %>

<section class="bg-grey3 p-5">
  <div class="container">
    <h2 class="mt-5">Besoin d'inspiration ?</h2>
    <p>Découvrez les mot cléfs populaires de la communauté</p>

    <div>
      <% CharacterTag.promoted.each do |tag|  %>
        <%= link_to tag, "/companies?q%5Bname_or_description_cont%5D=&q%5Bcharacter_tags_id_in%5D%5B%5D=#{tag.id}&commit=Search", class: 'btn btn-outline-dark' %>
      <% end %>
    </div>
  </div>
</section>

<section class="container my-5">
  <h2>Régions Make Works</h2>
  <p>Make Works opère dans <%= Region.all.count %> régions, et plus à venir.</p>
  <%= render partial: 'region_map', locals: { locations: @public_regions.with_lat_lng} %>
</section>

<section class="bg-green p-5">
  <div class="container">
    <h2 class="mt-5">À propos de Make Works</h2>
    <p>
    Make Works rend la fabrication accessible. Pensez-y comme une bibliothèque publique.
     Une ressource ouverte créée par des chercheurs d'usine dédiés où vous pouvez découvrir des
     fabricants, outils et matériaux avec lesquels travailler dans votre région.
    </p>

    <%= link_to  about_url, class: 'btn btn-dark mb-5' do %>
      <%= t("shared.read_more") %>
      <i class="bi bi-arrow-right ms-4"></i> <!-- the arrow doesn't show up -->
    <% end %>
  </div>
</section>

