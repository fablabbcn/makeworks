<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>M</th>
      <th>Name</th>
      <th>Can signup</th>
      <th>Is public</th>
      <th>Logo</th>
      <th>Trimmed name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.m_id %></td>
        <td><%= country.name %></td>
        <td><%= country.can_signup %></td>
        <td><%= country.is_public %></td>
        <td><%= country.logo %></td>
        <td><%= country.trimmed_name %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

