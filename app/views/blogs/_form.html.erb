<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-actions my-3">
    <%= f.button :submit %>
  </div>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%= f.association :user,
      label: 'Author',
      input_html: { 'data-controller': 'select2' },
      selected: @blog.user_id || current_user.id
    %>
    <%= f.input :slug %>
    <%= f.input :blurb %>
    <%= f.association :blog_categories, input_html: { 'data-controller': 'select2' } %>
    <div class="my-4">
      <%= f.rich_text_area :content_action, style: 'min-height: 200px; max-height: 600px; overflow-y: auto;' %>
    </div>
    <%= f.input :featured_video %>
    <%= f.input :header_image %>
    <%# f.association :medium, input_html: { 'data-controller': 'select2' } %>
    <%= f.input :dont_publish %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
